page{
  background:#f1f0f5;
  
}
.container{
  width:100%;
  background:#f1f0f5;
  padding:30rpx 40rpx;
}

form{
  width:100%;
  background:#fff;
  border-radius: 30rpx;
  padding:20rpx;
  height:80vh;
}

form button{
  margin-top:50rpx;
  width:90%;
}

.attr_box{
  width:100%;
}

.username{
  font-size:28rpx;
  display: flex;
  justify-content: start;
  align-items: center;
  border-bottom:1rpx solid #eee;
  padding:20rpx 0;
  background:#fff;
  height: 50rpx;
  padding-left:50rpx;
}

.username text{
  vertical-align: center;
  margin-left:20rpx;
  width:150rpx;
  justify-items: center;
}

.username image{
  transform: scale(1.5)
}