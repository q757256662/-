/* pages/dashboard/dashboard.wxss */

page{
  font-size:24rpx;
  /* background:#eee; */
}

.container{
  /* background:#eee; */
}
.box{
  width:100%;
  background: #fff;
}

.attr_box{
  width:100%;
  /* border-top:1px solid #ddd; */
}

.setting_box{
  padding:100rpx 50rpx;
}

.username{
  font-size:28rpx;
  display: flex;
  justify-content: start;
  align-items: center;
  border-bottom:1rpx solid #eee;
  padding:20rpx 0;
  background:#fff;
  height: 50rpx;
  padding-left:50rpx;
}

.username label{
  vertical-align: center;
  margin-left:20rpx;
  width:150rpx;
  justify-items: center;
}

.username image{
  transform: scale(1.5)
}

.user_detail{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height:400rpx;
  background: #f1f0f5
}

.user_detail image{
  border-radius: 50%;
}

.user_detail text{
  margin-top:20rpx;
}

.user_detail image{
  display: block;
  width:150rpx;
  height:150rpx;
  margin:0 auto;
}

input{
  display: inline-block;
  vertical-align: center;
}