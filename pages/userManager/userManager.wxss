/* pages/userManager/userManager.wxss */
page{
  min-height: 100vh;
  background: #eee;
}

.search_box{
  border:1px solid #ddd;
  width: 100%;
  font-size: 30rpx;
  height:80rpx;
  display: flex;
  align-items: center;
  background: #fff;
}


.search_box input{
  display: inline-block;
  vertical-align: middle;
  width:90%;
}

.user_box{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: start;
  margin:20rpx 20rpx 0;
  border:1px solid #ccc;
  background: #fff;
  padding: 30rpx;
  font-size: 28rpx;
  border-radius: 15rpx;
  border-left:20rpx solid #20AA39;
}

.user_inner{
  display: flex;
  justify-content: space-between;
  align-items:center;
  width:100%;
  white-space:nowrap;
}

.inner_bottom{
  display: flex;
  justify-content: start;
  width:100%;
}

.inner_remark{
  white-space:nowrap;
}

.inner_context{
  word-wrap:break-word;
  width:80%;
}

/* .inner_bottom text{
  word-wrap:break-word;
} */


.user_base view{
  width:250rpx;
}

.icon_btn {
  padding:10rpx 0;
  transform: scale(2)
}

.add_user{
  display: flex;
  align-items: center;
  justify-content: start;
  border:1px solid #ccc;
  background: #fff;
  padding: 30rpx;
  border-radius: 15rpx;
  margin:20rpx 20rpx 0;
}

.add_user image{
  margin-right:50rpx;
  transform: scale(1.2)
}

.noUser{
  text-align: center;
  margin:85rpx auto 0;
  /* background:#fff; */
  /* height:50rpx; */
  padding:20rpx 50rpx;
  width:90%;
  line-height: 50rpx;
  font-size: 30rpx;
}

.noUser image{
  width:200rpx;
  height:200rpx;
  display: block;
  margin:20rpx auto;
}